/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@core/*": [
        "src/app/core/*"
      ],
      "@design/*": [
        "src/app/design/*"
      ],
      "@feature/*": [
        "src/app/feature/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
